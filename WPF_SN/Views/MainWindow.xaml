<Window x:Class="WPF_SN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SN"
        xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="ChooseName" Height="560" Width="940" AllowsTransparency="True" WindowStyle="None" MinHeight="500">


    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>

    <!--===============================Window resources===============================-->

    <Window.Resources >
        <Style x:Key="{x:Type ContextMenu}" TargetType="{x:Type ContextMenu}">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ContextMenu}">
                        <Border Background="#FF17212B" CornerRadius="5" BorderThickness="0" >
                            <StackPanel ClipToBounds="True" Orientation="Vertical" IsItemsHost="True" Margin="5,4,5,4"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Storyboard x:Key="OpenMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="60"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="200"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="CloseMenu">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="60"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <!--===============================Main===============================-->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"  />
            <ColumnDefinition Name="mainGrid" Width="400" MinWidth="300" MaxWidth="600" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <!--Чтобы разделить 2 грида(начало)-->

        <Rectangle Grid.Column="1" Grid.Row="2" Fill="Beige" />
        <Rectangle Grid.Column="3" Grid.Row="2" Fill="NavajoWhite" />

        <!--Чтобы разделить 2 грида(конец)-->

        <GridSplitter Grid.Column="2"  Grid.Row="1" Grid.RowSpan="3" ShowsPreview="False" Width="5" 
                      HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="NavajoWhite" 
                      BorderBrush="#FF0E1621" />

        <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Fill="#FF242E4A" MouseDown="Rectangle_MouseDown" />
        <!--Fill="#FF1F2936"-->

        <Label Content="Что-то" Grid.Column="3" Grid.Row="0" FontSize="13" 
               Background="{x:Null}" HorizontalAlignment="Center" FontStyle="Italic"
               />

        <DockPanel Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right">
            <!--#FF1F2936-->
            <Button Width="25" Height="25" Background="Aquamarine" Click="btnRollDown_Click" BorderThickness="0" Margin="1 1 5 1">
                <!--<MaterialDesign:PackIcon Kind="WindowMinimize" Foreground="#FF6A7682" />-->
            </Button>

            <Button Width="25" Height="25" Background="Aquamarine" Click="btnFull_Click" BorderThickness="0" Margin="1 1 5 1">
                <!--<MaterialDesign:PackIcon Kind="WindowMaximize" Foreground="#FF6A7682"/>-->
            </Button>

            <Button x:Name="Exit" Width="25" Height="25" Background="Aquamarine" Click="btnExit_Click"  BorderThickness="0" Margin="1 1 1 1">
                <!--<MaterialDesign:PackIcon Kind="Clear"  Foreground="#FF6A7682"/>-->
            </Button>

